%section.intro
  .content.vline-top
    .row
      .col-xs-12.col-sm-8.col-sm-offset-2.col-md-6.col-md-offset-3
        .plantcare.padding-2{ style: plantcare_picture(@plantcare) }
          .to-top
            .pull-right
              #edit-picture.padding-1
                EDIT

          .to-bottom
            %h2.padding-1
              = @plantcare.name

            = render partial: 'plantcares/tabs_menu'

        = form_for @plantcare, url: plantcare_path(@plantcare), method: :put, html: { id: 'form_wtever_api_plantcare' } do |f|
          = render partial: 'plantcares/tabs_content', locals: { f: f }
