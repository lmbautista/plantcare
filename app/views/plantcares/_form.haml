= f.file_field :picture, class: "form-control hidden"
.row.plantcare-fields.pt-2
  .col-xs-12.col-sm-6
    .form-group
      = label_for(f.object, :name, class: "m-0")
      = f.text_field :name, class: "form-control"

  .col-xs-12.col-sm-6
    .form-group
      = label_for(f.object, :planted_at, class: "m-0")
      = f.text_field :planted_at, class: "form-control datepicker"

  .col-xs-12
    .pt-4
      .well
        = label_for(f.object, :wet_sensor_field)

        %h5.m-0
          = I18n.t("plantcares.hardware.wet_sensor_text")

        %h4.weight-2.text-center
          = fa_icon "fal fa-microchip vline-middle p-1"
          .inline-block.vline-bottom.weight-2
            = f.select :wet_sensor_field, WteverApi::Plantcare::WET_SENSOR_ARDUINO_FIELDS, { prompt: true }, { class: "form-control" }

  .col-xs-12
    .pb-4
      .well
        = label_for(f.object, :water_pump_field)

        %h5.m-0
          = I18n.t("plantcares.hardware.water_pump_text")

        %h4.weight-2.text-center
          = fa_icon "fal fa-dewpoint vline-middle p-1"
          .inline-block.vline-bottom.weight-2
            = f.select :water_pump_field, WteverApi::WaterPump::ARDUINO_FIELDS, { prompt: true }, { class: "form-control" }

:javascript
  uploaderControl($("#edit-picture"), $("#plantcare-panel"), $("#wtever_api_plantcare_picture"));
