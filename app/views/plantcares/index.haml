- if @plantcares.present?
  .vline-middle.the-garden.flex.flex-direction-column.flex-justify-center.align-center.bg-one-color#the-garden
    = render partial: "shared/title", locals: { title: I18n.t("plantcares.index.title"), subtitle: I18n.t("plantcares.index.subtitle") }

    .text-center.mt-3.mb-3.new-plantcare
      = link_to I18n.t("plantcares.new.title"), new_plantcare_path, class: "custom-btn custom-btn-secondary"
      = link_to I18n.t("plantcares.index.how-it-works"), '#instructions', class: "ref custom-btn custom-btn-secondary"

    .plantcare-cards.pt-3.pb-4
      = render partial: "card", collection: @plantcares, as: :plantcare

  #new_watering_modal
  #edit_watering_modal
  #list_waterings_modal
  #new_watering_schedule_modal
  #edit_watering_schedule_modal

- else
  .intro.p-1.content.vline-middle.bg-one-color
    = render partial: "shared/title", locals: { title: I18n.t("plantcares.index.title"), subtitle: I18n.t("plantcares.index.subtitle") }

    .mt-4
      .row
        .col-xs-12.col-sm-8.col-sm-offset-2.col-md-6.col-md-offset-3
          .text-center.pt-3
            = link_to I18n.t("plantcares.new.title"), new_plantcare_path, class: "custom-btn custom-btn-secondary"
            = link_to I18n.t("plantcares.index.how-it-works"), '#instructions', class: "ref custom-btn custom-btn-secondary"

.vline-middle.the-instructions.flex.flex-direction-column.flex-justify-center.align-center.pb-4.bg-two-color{id:"instructions"}
  = render partial: "shared/title", locals: { title: I18n.t("plantcares.index.instructions.title"), subtitle: I18n.t("plantcares.index.instructions.subtitle") }
  %section.mt-4.pt-3.pl-1.pr-1
    .row
      .col-xs-12.col-lg-8.col-lg-offset-2.col-xl-6.col-xl-offset-3
        = render partial: "instructions"

:javascript
  $(document).ready(function(){
    $(".action").each(function(){
      $(this).addClass("swashIn");
    });
  })
