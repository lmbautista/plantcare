.intro.vline-top
  #plantcare-panel.plantcare.opposite-color.p-2{style: plantcare_background(@plantcare)}
    .title.text-center
      %h3.weight-1= I18n.t("plantcares.new.title")
      %h4#edit-picture.m-0.p-1
        = fa_icon "fal fa-camera-retro opposite-color"

  .row{"style" => "width: 100%"}
    .col-xs-12.col-sm-8.col-sm-offset-2.col-md-6.col-md-offset-3
      .p-2
        = form_for @plantcare, url: { controller: "plantcares", action: "create" }, method: :post, html: { id: "form_plantcare_api" } do |f|
          = render partial: "form", locals: { f: f, form_id: "form_plantcare_api" }
          -# = render partial: "shared/uploader", locals: { f: f, uploader_name: :attachments, form_id: "form_plantcare_api", multiple: true }
          .pt-2
            = render "shared/form/submit", f: f