%section.intro
  .content.vline-top.pt-4
    .row
      .col-xs-12.col-sm-8.col-sm-offset-2.col-md-6.col-md-offset-3
        #plantcare-panel.plantcare.p-2{style: plantcare_picture(@plantcare)}
          .to-top
            .pull-right
              %h4#edit-picture.m-0.p-1
                = fa_icon 'fal fa-edit opposite-color'
            .text-center
              %h3.text-uppercase.mb-0.weight-1
                = I18n.t('plantcares.new.title')
              %h4.mt-0.mb-3.weight-2
                = I18n.t('plantcares.new.subtitle')    

          .to-bottom

        .mt-1
          = form_for @plantcare, url: { controller: 'plantcares', action: 'create' }, method: :post, html: { id: 'form_wtever_api_plantcare' } do |f|
            = render partial: 'form', locals: { f: f, form_id: 'form_wtever_api_plantcare' }

