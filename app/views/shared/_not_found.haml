- title    ||= ''
- subtitle ||= ''
- dark     ||= false

.title{ class: "#{'dark' if dark}" }
  .row
    .col-xs-12.col-md-6.col-md-offset-3.text-center
      - if title.present?
        %h3.text-uppercase.no-margin-bottom
          = raw title

      - if subtitle.present?
        %h4.no-margin-top.margin-3-bottom
          = raw subtitle
