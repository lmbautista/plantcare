- title    ||= ''
- subtitle ||= ''
- dark     ||= false

.title{ class: "#{'dark' if dark}" }
  .row
    .col-xs-12.col-md-6.col-md-offset-3.text-center
      - if title.present?
        %h3.text-uppercase.mb-0
          = raw title

      - if subtitle.present?
        %h4.mt-0.mb-3
          = raw subtitle
