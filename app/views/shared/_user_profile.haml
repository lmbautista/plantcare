.hidden-xs.col-sm-6.col-md-6.text-right
  .btn-group.profile.mt-2
    = link_to profile_user_path(current_user), class: 'inline-block mr-1' do
      %h3.m-0.inline-block.vline-middle.opposite-color
        = fa_icon 'fal fa-user-circle opposite-color'

      %h5.m-0.inline-block.weight-2.opposite-color
        = current_user.first_name

    = link_to signout_path, class: 'inline-block' do
      %h4.m-0.inline-block.vline-middle.opposite-color
        = fa_icon 'fal fa-sign-out-alt opposite-color'
