.form.content.vline-top.flex.flex-direction-column.flex-justify-center.align-center.pb-4
  .row.full-width
    .col-xs-12.col-sm-8.col-sm-offset-2.col-md-6.col-md-offset-3.p-3
      .font-color
        = render partial: 'shared/title', locals: { title: I18n.t('users.edit.title'), subtitle: I18n.t('users.edit.subtitle'), dark: true }

      = form_for @user, url: user_path(@user), method: :put do |f|
        .row.plantcare-fields
          .col-xs-12.col-md-6.text-center
            = render partial: 'users/basic_form_fields',    locals: { f: f }

          .col-xs-12.col-md-6.text-center
            = render partial: 'users/extended_form_fields', locals: { f: f }

        .pt-2
          = render 'shared/form/submit', f: f
