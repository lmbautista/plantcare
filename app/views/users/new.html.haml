- content_for :header do
  .row
    .col-xs-12.col-sm-4.col-md-4.col-md-offset-1
      %h3.plantcare-icon.mb-3.mt-2
        = link_to root_path do
          = image_tag "logo.png", height: 65

.flex.flex.flex-direction-column.align-center.pb-2.visible-xs
  = flex_image_div image_url: "signup-#{current_user ? current_user.lang : I18n.default_locale}.png", mobile: true
  = flex_panel_div mobile: true, classes: "flex-direction-column" do
    = render partial: 'shared/title', locals: { title: I18n.t('users.new.title'), subtitle: I18n.t('users.new.subtitle') }
    .row.full-width
      .col-xs-12.col-sm-10.col-sm-offset-1.col-md-8.col-md-offset-2
        = render partial: 'users/signup'
    .row.full-width
      .col-xs-12.text-center.primary-color
        = raw I18n.t('users.new.have_account', signup_link: signup_path)

.flex.align-center.pt-2.pb-2.hidden-xs
  = flex_panel_div classes: "flex-direction-column" do
    = render partial: 'shared/title', locals: { title: I18n.t('users.new.title'), subtitle: I18n.t('users.new.subtitle') }
    .row.full-width
      .col-xs-12.col-sm-10.col-sm-offset-1.col-md-8.col-md-offset-2
        = render partial: 'users/signup'
    .row.full-width
      .col-xs-12.text-center.primary-color
        = raw I18n.t('users.new.have_account', signup_link: signup_path)
  = flex_image_div image_url: "signup-#{current_user ? current_user.lang : I18n.default_locale}.png"

= modal_for('signin_modal', I18n.t("sessions.new.subtitle").humanize, { footer: false }) do
  - capture_haml do
    .plantcare-fields-dark
      = render partial: 'sessions/signin', locals: { remote: true }
